
<div class="row">

  <div class="col-1" style="height: 1px;"></div>
  <div class="col-11 my-2 border mx-auto">
    <h3><%= title %></h3>
    <div class="row">
      <% posts.each do |post| %>
        <div class="container-fluid bg-light m-2 border">
          <div class="row">
            <div class="col-6 m-2 p-2">
              <div class="row">
                <div class="col-4">
                  <%= link_to user_path(post.user), 'data-turbolinks': false do %>
                    <%= attachment_image_tag post.user, :profile_image, :fill, 150, 150, fallback: "no_image.jpg", size:"150x150", class:"border" %>
                    <p><%= post.user.name %>さん</p>
                  <% end %>

                  <span id="favorite_buttons_<%= post.id %>">
                    <%= render "favorites/favorite", post: post %>
                  </span>
                  <span>
                    <i class="far fa-eye ml-3"></i><%= post.impressions_counts.count %>
                  </span>
                  <br>
                  <span>
                    コメント：<%= post.comments.count %>
                  </span>

                </div>
                <div class="col-7 text-left">
                  <p><strong>タイトル：
                    <%= link_to post_path(post), 'data-turbolinks': false do %>
                      <%= post.title %>
                    <% end %></strong>
                    (<%= post.created_at.strftime('%Y/%m/%d %H:%M') %>)
                  </p>
                  <div id="star-rate-<%= post.id %>"></div>
                  <script>
                    $('#star-rate-<%= post.id %>').empty();
                    $('#star-rate-<%= post.id %>').raty({
                      size: 36,
                      starOff:  '<%= asset_path('star-off.png') %>',
                      starOn : '<%= asset_path('star-on.png') %>',
                      starHalf: '<%= asset_path('star-half.png') %>',
                      half: true,
                      readOnly: true,
                      score: <%= post.rate %>,
                    });
                  </script>
                  <br>
                  <p>場所：<%= post.post_prefecture %></p>
                  <p>おすすめポイント：<%= post.body %></p>
                </div>
              </div>
            </div>

            <div class="col-5 my-2 mx-auto" >
              <div class="col-11 mx-auto p-2">
                <%= link_to post_path(post), 'data-turbolinks': false do %>
                  <%= attachment_image_tag post, :image, :fill, 500, 300, fallback: "no_image.jpg", size:"500x300", class:"border" %>
                <% end %>
              </div>
            </div>

          </div>
        </div>
      <% end %>
      <div class="mx-auto">
        <%= paginate posts %>
      </div>
    </div>
  </div>

</div>