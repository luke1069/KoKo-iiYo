
<div class="row">

  <div class="col-1" style="height: 1px;"></div>
  <div class="col-11 my-2 mx-auto">
    <h3><%= title %></h3>
    <div class="row">
      <div class="mx-auto my-2">
        <%= paginate posts %>
      </div>
      <% posts.each do |post| %>
        <div class="container-fluid bg-light m-2 border">
          <div class="row">
            <div class="col-11 m-2 p-2">
              <div class="row">
                <div class="col-3">
                  <%= link_to user_path(post.user), 'data-turbolinks': false do %>
                    <%= attachment_image_tag post.user, :profile_image, fallback: "no_image.jpg", class:"post_or_user_image border" %>
                    <p><%= post.user.name %>さん</p>
                  <% end %>
                  <span id="favorite_buttons_<%= post.id %>">
                    <%= render "favorites/favorite", post: post %>
                  </span>
                  <span>
                    <i class="far fa-eye ml-3"></i><%= post.impressions_counts.count %>
                  </span>
                  <br>
                  <span>
                    コメント：<%= post.comments.count %>
                  </span>
                </div>
                <div class="col-4 text-left">
                  <p><strong>タイトル<br>
                    <%= link_to post_path(post), 'data-turbolinks': false do %>
                      <%= post.title %>
                    <% end %></strong>
                    (<%= post.created_at.strftime('%Y/%m/%d %H:%M') %>)
                  </p>
                  <div id="star-rate-<%= post.id %>"></div>
                  <script>
                    $('#star-rate-<%= post.id %>').empty();
                    $('#star-rate-<%= post.id %>').raty({
                      size: 36,
                      starOff:  '<%= asset_path('star-off.png') %>',
                      starOn : '<%= asset_path('star-on.png') %>',
                      starHalf: '<%= asset_path('star-half.png') %>',
                      half: true,
                      readOnly: true,
                      score: <%= post.rate %>,
                    });
                  </script>
                  <br>
                  <p><strong>場所</strong><br><%= post.post_prefecture %></p>
                  <p><strong>おすすめポイント</strong><br><%= post.body %></p>
                </div>
                <div class="col-5 mx-auto p-2">
                  <%= link_to post_path(post), 'data-turbolinks': false do %>
                    <%= attachment_image_tag post, :image, fallback: "no_image.jpg", class:"post_or_user_image border" %>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
      <div class="mx-auto my-2">
        <%= paginate posts %>
      </div>
    </div>
  </div>

</div>