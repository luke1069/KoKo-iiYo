<% if user != current_user %>
  <% if user.is_followed_by(current_user) %>
    <%= link_to "フォロー外す", user_relationships_path(user), method: :delete, class:"my-2 btn btn-sm btn-outline-danger" %>
  <% else %>
    <%= link_to "フォローする", user_relationships_path(user), method: :post, class:"my-2 btn btn-sm btn-outline-secondary" %>
  <% end %>
<% end %>