<div class="sidebar col-1 mx-0 text-center pl-2">
  <div class="sidebar-icon w-100 fas fa-search border py-5 my-2">
    <strong>投稿検索</strong>
  </div>
  <%= link_to new_post_path do %>
    <div class="sidebar-icon w-100 fas fa-biking border py-5 my-2">
      新規投稿
    </div>
  <% end %>
  <div class="sidebar-icon w-100 fas fa-star border py-5 my-2">
    お気に入り
  </div>
  <% if user_signed_in? %>
    <%= link_to user_path(current_user) do %>
      <div class="sidebar-icon w-100 fas fa-gas-pump border py-5 my-2">
        マイページ
      </div>
    <% end %>
  <% else %>
    <%= link_to new_user_registration_path do %>
      <div class="sidebar-icon w-100 fas fa-gas-pump border py-5 my-2">
        マイページ
      </div>
    <% end %>
  <% end %>

</div>