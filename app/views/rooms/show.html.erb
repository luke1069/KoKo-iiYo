<%= render "homes/sidebar" %>

<div class="container-fluid">
  <div class="row">

    <div class="col-2 col-md-1" style="height: 1px;"></div>
    <div class="col-10 col-md-11 my-2 mr-auto">
      <h3 class="my-3">メッセージ</h3>
      <div class="col-12 col-md-10 bg-light my-3 mx-auto border">
        <div class="messages">
          <% if @messages.present? %>
            <% @messages.each do |m| %>
              <% if m.user != current_user %>
                <div class="mt-3 mb-4 ml-2 text-left">
                  <%= link_to user_path(m.user), class:"text-dark" do %>
                    <%= attachment_image_tag m.user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg", size:"50x50", class:"border" %>
                    <%= m.user.name %>
                  <% end %>
                  <br>
                  <strong><%= safe_join(m.content.split("\n"),tag(:br)) %></strong><br>
                  (<%= m.created_at.strftime('%Y/%m/%d %H:%M') %>)
                </div>
              <% else %>
                <div class="mt-3 mb-4 mr-2 text-right">
                  <%= link_to user_path(m.user) do %>
                    <%= attachment_image_tag m.user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg", size:"50x50", class:"border" %>
                  <% end %>
                  <%= link_to "削除", message_path(m), method: :delete, class:"btn btn-sm btn-outline-danger"%>
                  <br>
                  <strong class=""><%= safe_join(m.content.split("\n"),tag(:br)) %></strong><br>
                  (<%= m.created_at.strftime('%Y/%m/%d %H:%M') %>)
                </div>
              <% end %>
            <% end %>
          <% else %>
            <p class="my-3">まだメッセージはありません。</p>
          <% end %>
        </div>
        <div class="new_messages my-3 mx-1 text-right">
          <%= form_with model:@message, local:true do |f| %>
            <%= f.text_area :content, class:"text_area", placeholder: "メッセージを入力して下さい。" %>
            <%= f.hidden_field :room_id, value: @room.id %><br>
            <%= f.submit "送信" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>